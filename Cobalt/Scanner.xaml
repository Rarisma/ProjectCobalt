<Page
    x:Class="Cobalt.Scanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cobalt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel >
        <TextBlock Text="Welcome to GameManger" FontSize="40" Padding="20" HorizontalAlignment="Center"></TextBlock>
        <Border MinHeight="50" MaxHeight="200"></Border>
        <TextBlock Text="Put any paths below and we will look for you games and roms there" HorizontalAlignment="Center"  Name="Gamedirs" Padding="20"></TextBlock>
        <TextBox Name="RomsList" Width="600" Height="400"/>
        <Button Width="600" Content="Continue" Name="ContinueButton" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="20" Click="Continue"></Button>
    </StackPanel>
</Page>
