<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProjectCobalt.Cobalt.Scanner">
	<StackPanel >
		<TextBlock Text="Welcome to Project Cobalt" FontSize="40" Padding="20" HorizontalAlignment="Center"></TextBlock>
		<Border MinHeight="50" MaxHeight="200"></Border>
		<StackPanel Orientation="Horizontal">
			<Button Width="256" Height="256" Background="#000">
				<Panel>
					<Image Name="Steam" Height="200"/>
					<TextBlock Text="Steam" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
				</Panel>
			</Button>
			<Border Width="30"/>
			<Button Width="256" Height="256" Background="#000">
				<Panel>
					<Image Name="Roms" Height="200"/>
					<TextBlock Text="Roms" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
				</Panel>
			</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
